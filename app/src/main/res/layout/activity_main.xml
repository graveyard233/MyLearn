<?xml version="1.0" encoding="utf-8"?>

<!--android:background="@color/purple_500"-->
<!-- centerInside 是不会缩放过小的图片 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView

        android:id="@+id/tv_one"
        android:text="@string/my_name2"
        android:textColor="#f47920"
        android:textStyle="bold"
        android:textSize="40sp"

        android:gravity="center_vertical"

        android:shadowColor="#005831"
        android:shadowRadius="1.5"
        android:shadowDx="10.0"
        android:shadowDy="10"

        android:layout_width="match_parent"
        android:layout_height="75dp"

        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

    <Button
        android:id="@+id/btn"

        android:layout_width="100dp"
        android:layout_height="75dp"

        android:text="i am text"
        android:background="@drawable/btn_selector"
        android:backgroundTint="@color/btn_color_selector"

        />

    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:textColorHint="@color/background_color"

        android:drawableLeft="@drawable/ic_baseline_edit_24"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"


        />
    <Button
        android:id="@+id/btn_getpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取密码"

        />

    <ImageView
        android:src="@drawable/glass"
        android:scaleType="fitCenter"
        android:layout_width="200dp"
        android:layout_height="150dp"/>
    <ImageView
        android:src="@drawable/glass_change_544x383"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="myclick"
        android:text="隐藏进度条"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>